<window id="2008">
	<defaultcontrol always="true">450</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<include>DialogOpenCloseAnim</include>
	
	<coordinates>
		<system>1</system>
		<origin x="390" y="180">true</origin>
	</coordinates>
	
	<controls>
		<include>FileStackingDialogBox</include>
		
		<control type="label" id="1">
			<include>DialogTitle2</include>
			<label>$INFO[ListItem.Label]</label>
		</control>
		
		<control type="image">
			<posx>DialogMarginOffsetX</posx>
			<posy>DialogMarginOffsetY</posy>
			<width>128</width>
			<height>128</height>
			<texture>DefaultPlaylistBig.png</texture>
		</control>
			
		<control type="panel" id="450">
			<posx>182</posx>
			<posy>85</posy>
			<width>280</width>
			<height>80</height>
			<onup>450</onup>
			<ondown>450</ondown>
			<onleft>450</onleft>
			<onright>450</onright>
			<focusposition>2</focusposition>
			<itemlayout width="56" height="20">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>54</width>
					<height>18</height>
					<aspectratio>stretch</aspectratio>
					<texture border="5">button-nofocus.png</texture>
				</control>
			</itemlayout>
			<focusedlayout width="56" height="20">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>54</width>
					<height>18</height>
					<aspectratio>stretch</aspectratio>
					<texture border="5">file-stacking.png</texture>
				</control>
			</focusedlayout>
		</control>
			
		<control type="label">
			<posx>182</posx>
			<posy>DialogMarginOffsetY</posy>
			<width>280</width>
			<font>HeadFont2</font>
			<textcolor>DefaultColor</textcolor>
			<align>left</align>
			<label>$INFO[Container(450).ListItem.Label]</label>
		</control>
	</controls>
</window>