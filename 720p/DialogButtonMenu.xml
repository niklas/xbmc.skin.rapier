<window type="buttonMenu" id="111">
	<defaultcontrol always="true">201</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<include>DialogOpenCloseAnim</include>
	
	<coordinates>
		<system>1</system>
		<origin x="460" y="120">true</origin>
	</coordinates>
	
	<controls>
		<control type="grouplist">
			<itemgap>0</itemgap>
			<control type="image">
				<width>360</width>
				<height>43</height>
				<texture border="40,40,40,0">special://skin/images/skin/context-menu-top.png</texture>	
			</control>
			<control type="image">
				<width>360</width>
				<height>37</height>
				<texture border="40,2,40,2">special://skin/images/skin/context-menu-middle.png</texture>	
			</control>
			<control type="image">
				<width>360</width>
				<height>37</height>
				<texture border="40,2,40,2">special://skin/images/skin/context-menu-middle.png</texture>	
				<visible>!System.Platform.Xbox</visible>
			</control>
			<control type="image">
				<width>360</width>
				<height>37</height>
				<texture border="40,2,40,2">special://skin/images/skin/context-menu-middle.png</texture>
				<visible>!System.Platform.Xbox</visible>	
			</control>
			<control type="image">
				<width>360</width>
				<height>37</height>
				<texture border="40,2,40,2">special://skin/images/skin/context-menu-middle.png</texture>	
			</control>
			<control type="image">
				<width>360</width>
				<height>37</height>
				<texture border="40,2,40,2">special://skin/images/skin/context-menu-middle.png</texture>	
			</control>
			<control type="image">
				<width>360</width>
				<height>37</height>
				<texture border="40,2,40,2">special://skin/images/skin/context-menu-middle.png</texture>	
			</control>
			<control type="image">
				<width>360</width>
				<height>37</height>
				<texture border="40,2,40,2">special://skin/images/skin/context-menu-middle.png</texture>	
				<visible>System.HasLoginScreen</visible>
			</control>
			<control type="image">
				<width>360</width>
				<height>37</height>
				<texture border="40,2,40,2">special://skin/images/skin/context-menu-middle.png</texture>	
			</control>
			<control type="image">
				<width>360</width>
				<height>37</height>
				<texture border="40,2,40,2">special://skin/images/skin/context-menu-middle.png</texture>
				<visible>System.Platform.Xbox</visible>
			</control>
			<control type="image">
				<width>360</width>
				<height>37</height>
				<texture border="40,2,40,2">special://skin/images/skin/context-menu-middle.png</texture>
				<visible>System.HasLocks</visible>	
			</control>
			<control type="image">
				<width>360</width>
				<height>37</height>
				<texture border="40,2,40,2">special://skin/images/skin/context-menu-middle.png</texture>
				<visible>System.HasMediaDVD</visible>	
			</control>
			<control type="image">
				<width>360</width>
				<height>41</height>
				<texture border="40,0,40,40">special://skin/images/skin/context-menu-bottom.png</texture>	
			</control>
		</control>
		
		<control type="group" id="307">
			<posx>DialogMarginOffsetX</posx>
			<posy>43</posy>
			<defaultcontrol always="true">201</defaultcontrol>
			
			<control type="button" id="202">
				<description>30min Shutdown Timer</description>
				<include>ShutdownContextMenuBtn</include>
				<label>$LOCALIZE[20147]</label>
				<onclick>AlarmClock(ShutdownTimer,Shutdown(),30)</onclick>	
				<visible allowhiddenfocus="true">Control.HasFocus(202)</visible>
				<onup>108</onup>
				<ondown>100</ondown>
				<onleft>201</onleft>
				<onright>203</onright>
			</control>
			<control type="button" id="203">
				<description>60min Shutdown Timer</description>
				<include>ShutdownContextMenuBtn</include>
				<label>$LOCALIZE[20148]</label>
				<onclick>AlarmClock(ShutdownTimer,Shutdown(),60)</onclick>
				<visible allowhiddenfocus="true">Control.HasFocus(203)</visible>
				<onup>108</onup>
				<ondown>100</ondown>
				<onleft>202</onleft>
				<onright>204</onright>
			</control>
			<control type="button" id="204">
				<description>120min Shutdown Timer</description>
				<include>ShutdownContextMenuBtn</include>
				<label>$LOCALIZE[20149]</label>
				<onclick>AlarmClock(ShutdownTimer,Shutdown(),120)</onclick>
				<visible allowhiddenfocus="true">Control.HasFocus(204)</visible>
				<onup>108</onup>
				<ondown>100</ondown>
				<onleft>203</onleft>
				<onright>205</onright>
			</control>
			<control type="button" id="205">
				<description>Custom Shutdown Timer</description>
				<include>ShutdownContextMenuBtn</include>
				<label>$LOCALIZE[20150]</label>
				<onclick>AlarmClock(ShutdownTimer,Shutdown())</onclick>
				<visible allowhiddenfocus="true">Control.HasFocus(205)</visible>
				<onup>108</onup>
				<ondown>100</ondown>
				<onleft>204</onleft>
				<onright>201</onright>
			</control>
			<control type="button" id="201">
				<description>Shutdown</description>
				<include>ShutdownContextMenuBtn</include>
				<label>$LOCALIZE[13005]</label>
				<onclick>Dialog.Close(all,true)</onclick>
				<onclick>Shutdown()</onclick>
				<visible allowhiddenfocus="true">!Control.HasFocus(202) + !Control.HasFocus(203) + !Control.HasFocus(204) + !Control.HasFocus(205)</visible>
				<onup>109</onup>
				<ondown>100</ondown>
				<onleft>205</onleft>
				<onright>202</onright>	
			</control>
			
			<control type="image">
				<posx>5</posx>
				<posy>9</posy>
				<width>16</width>
				<height>16</height>
				<texture>arrow-scroll-left-focus.png</texture>
				<visible>Control.HasFocus(201) | Control.HasFocus(202) | Control.HasFocus(203) | Control.HasFocus(204) | Control.HasFocus(205)</visible>
			</control>
			
			<control type="image">
				<posx>259</posx>
				<posy>9</posy>
				<width>16</width>
				<height>16</height>
				<texture>arrow-scroll-right-focus.png</texture>
				<visible>Control.HasFocus(201) | Control.HasFocus(202) | Control.HasFocus(203) | Control.HasFocus(204) | Control.HasFocus(205)</visible>
			</control>
		</control>

		<control type="grouplist" id="301">
			<posx>DialogMarginOffsetX</posx>
			<posy>80</posy>
			<itemgap>2</itemgap>
			<onup>201</onup>
			<ondown>201</ondown>
			<visible>System.LoggedOn</visible>
			<control type="button" id="100">
				<description>Suspend</description>
				<include>ContextMenuBtn</include>
				<label>$LOCALIZE[13011]</label>
				<onclick>Dialog.Close(all,true)</onclick>
				<onclick>Suspend()</onclick>
				<visible>!System.Platform.Xbox</visible>
			</control>	
			<control type="button" id="101">
				<description>Hibernate</description>
				<include>ContextMenuBtn</include>
				<label>$LOCALIZE[13010]</label>
				<onclick>Dialog.Close(all,true)</onclick>
				<onclick>Hibernate()</onclick>
				<visible>!System.Platform.Xbox</visible>
			</control>
			<control type="button" id="102">
				<description>Reboot</description>
				<include>ContextMenuBtn</include>
				<label>$LOCALIZE[13013]</label>
				<onclick>Dialog.Close(all,true)</onclick>
				<onclick>Reset()</onclick>
			</control>
			<control type="button" id="103">
				<description>Quit XBMC</description>
				<include>ContextMenuBtn</include>
				<label>$LOCALIZE[13009] XBMC</label>
				<onclick>Dialog.Close(all,true)</onclick>
				<onclick>Quit()</onclick>
			</control>
			<control type="button" id="104">
				<description>Restart XBMC</description>
				<include>ContextMenuBtn</include>
				<label>$LOCALIZE[13313] XBMC</label>
				<onclick>Dialog.Close(all,true)</onclick>
				<onclick>RestartApp()</onclick>
			</control>		
			<control type="button" id="105">
				<description>Log Off</description>
				<include>ContextMenuBtn</include>
				<label>$LOCALIZE[20126]</label>
				<onclick>Dialog.Close(all,true)</onclick>
				<onclick>System.LogOff</onclick>
				<visible>System.HasLoginScreen</visible>
			</control>
			<control type="button" id="106">
				<description>Reload Skin</description>
				<include>ContextMenuBtn</include>
				<label>$LOCALIZE[20183]</label>
				<onclick>Dialog.Close(all,true)</onclick>
				<onclick>ReloadSkin()</onclick>
			</control>	
			<control type="button" id="107">
				<description>Dashboard</description>
				<include>ContextMenuBtn</include>
				<label>$LOCALIZE[13006]</label>
				<onclick>Dashboard()</onclick>
				<visible>System.Platform.Xbox</visible>
			</control>
			<control type="togglebutton" id="108">
				<description>Master Mode</description>
				<include>ContextMenuBtn</include>
				<usealttexture>System.IsMaster</usealttexture>
				<label>$LOCALIZE[20045]</label>
				<altlabel>$LOCALIZE[20046]</altlabel>
				<onclick>MasterMode</onclick>
				<visible>System.HasLocks</visible>
			</control>
			<control type="button" id="109">
				<description>Play Disc</description>
				<include>ContextMenuBtn</include>
				<label>$LOCALIZE[341]</label>
				<onclick>PlayDVD()</onclick>
				<visible>System.HasMediaDVD</visible>
			</control>
		</control>
	</controls>
</window>